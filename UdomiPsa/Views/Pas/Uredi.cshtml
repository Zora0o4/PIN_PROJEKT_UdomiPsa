@model UdomiPsa.Models.Pas

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Uredi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godine" class="control-label"></label>
                <input asp-for="Godine" class="form-control" />
                <span asp-validation-for="Godine" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Udomljen" /> @Html.DisplayNameFor(model => model.Udomljen)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="VrstaId" class="control-label"></label>
                <select asp-for="VrstaId" class="form-control" asp-items="ViewBag.VrstaId">
                    <!-- Dropdown se automatski popunjava iz ViewBag -->
                </select>
                <span asp-validation-for="VrstaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary" > Spremi </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


